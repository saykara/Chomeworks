#include <stdio.h>
#include <time.h>
#include <stdlib.h>

int main()
{
	int playernum, Gameboard[100], dice, sum ,i, j;
	srand(time(NULL));
	
	printf("Please enter number of players:"); scanf("%d",&playernum);
	
	for(i=0; i<=99; i++)
	{
		Gameboard[i]= i+1;
	}
    Gameboard[1]=18;
    Gameboard[15]=26;
    Gameboard[29]=35;
    Gameboard[51]=80;
    Gameboard[60]=69;
    Gameboard[69]=75;
    Gameboard[81]=89;
    Gameboard[92]=99;
    
	Gameboard[19]=5;
    Gameboard[31]=12;
    Gameboard[40]=10;
	Gameboard[53]=31;
    Gameboard[67]=55;
	Gameboard[91]=60;
	Gameboard[94]=49;
	Gameboard[97]=44;
	
	int Player[playernum], endgame=0;
	for(i=0; i<playernum;i++)
	{
		Player[i]=1;
	}
	
	for(i=0; i<playernum; i++)
	{
		printf("Face\tBox\tF.Box");
	}
	
	while(endgame==0)
	{
		for(j=0; j<playernum; j++ )
		{    
			sum= 1 +rand()%6;
			if (Player[j] + sum > 100)
			{
				continue;
			}
		    else
		    {
		    	Player[j] = Gameboard[sum + Player[j]-1];
		   	}
		    if(Player[j]==100)
			{
				endgame=1;
				break;
			}
	   
	  	}
	}
     
    
	return 0;
}

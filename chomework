#include <stdio.h>
#include <time.h>
#include <stdlib.h>

int main()
{
	int playernum, Gameboard[106], dice, sum ,i, j;
	srand(time(NULL));
	
	printf("Please enter number of players:"); scanf("%d",&playernum);
	
	for(i=0; i<=105; i++)
	{
		
                 Gameboard[i]= i+1;
       
	}
    Gameboard[1]=18;
    Gameboard[15]=26;
    Gameboard[29]=35;
    Gameboard[51]=80;
    Gameboard[60]=69;
    Gameboard[69]=75;
    Gameboard[81]=89;
    Gameboard[92]=99;
    
	Gameboard[19]=5;
    Gameboard[31]=12;
    Gameboard[40]=10;
	Gameboard[53]=31;
    Gameboard[67]=55;
	Gameboard[91]=60;
	Gameboard[94]=49;
	Gameboard[97]=44;
	
	int Player[playernum], endgame=0;
	for(i=0; i<playernum;i++)
	{
		Player[i]=1;
	}
	
	for(i=0; i<playernum; i++)
	{
		printf("Face\tBox\tF.Box\t");
	}
	
	printf("\n");
	
	for(i=0; i<playernum; i++)
	{
		printf("\t1\t\t");
	}
	
	printf("\n");
	
	while(endgame==0)
	{
		for(j=0; j<playernum; j++ )
		{    
			dice= 1 +rand()%6;
			sum=Player[j];
         	Player[j] = Gameboard[dice + Player[j]-1];
         	if (Player[j]> 100)
			{
				Player[j]= Player[j] - dice;
			}
		   
		    printf("%d\t%d\t", dice, sum + dice);
	        
			if(Player[j] == 100)
	        {
	        	printf("WON!");
			}
			else if(sum + dice != Player[j])
			{
				printf("%d\t", Player[j]);
			}
			else
			{
				printf("\t");
			}
			
			if(Player[j]==100)
			{
				endgame=1;
				break;
			}
	        
	  	}
	  	printf("\n");
	}
    getchar();
    getchar();
	return 0;
}

#include <stdio.h>
#include <time.h>
#include <stdlib.h>

int main(){
	int playernum = 1, Gameboard[100], dice, sum ,i, j,k,l;
	srand(time(NULL));	
	printf("Please enter number of players:"); scanf("%d",&playernum);	
	for(i=0; i<=99; i++){
		Gameboard[i]= i+1;
	}
    Gameboard[1]=18;
    Gameboard[15]=26;
    Gameboard[29]=35;
    Gameboard[51]=80;
    Gameboard[60]=69;
    Gameboard[69]=75;
    Gameboard[81]=89;
    Gameboard[92]=99;    
	Gameboard[19]=5;
    Gameboard[31]=12;
    Gameboard[40]=10;
	Gameboard[53]=31;
    Gameboard[67]=55;
	Gameboard[91]=60;
	Gameboard[94]=49;
	Gameboard[97]=44;	
	int Player[playernum];
	int endgame = 0;	
	for(k = 0; k < playernum; k++){
		Player[k] = 1;
		printf("Face\tBox\tF.Box\t");
	}
	printf("\n");
	for(k = 0; k < playernum; k++){
		printf("\t1\t\t");
	}
	while(endgame==0){
		printf("\n");
		for( j=0 ; j<playernum; j++){    
			sum= 1 +rand()%6;
			if((Player[j] + sum ) > 100){
				printf("%d\t%d\t%d\t", sum, (Player[j] + sum), Player[j]);
		 	}else{
				if((Player[j] + sum) == Gameboard[sum + Player[j] - 1]){
					if((Player[j] + sum) == 100){
						printf("%d\t100\tWON!\t", sum);
					}else{
						printf("%d\t%d\t\t", sum, (Player[j]+sum));
					}					
				}else{
					printf("%d\t%d\t%d\t", sum, (Player[j]+sum), (Gameboard[sum + Player[j] - 1]));
				}			
				Player[j] = Gameboard[sum + Player[j] - 1];		   		
			}			
			if(Player[j]==100){
				endgame=1;
				break;
			}	        
		}		
	}     
    return 0;
}
